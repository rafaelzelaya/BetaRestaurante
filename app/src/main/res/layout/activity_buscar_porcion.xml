<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lvlitems"
        android:layout_below="@+id/id_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/id_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        android:text="Id" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="nombre"
        android:id="@+id/nombre_txt"
        android:layout_alignBottom="@+id/id_txt"
        android:layout_toRightOf="@+id/id_txt"
        android:layout_toEndOf="@+id/id_txt"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="precio"
        android:id="@+id/precio_txt"
        android:layout_alignBaseline="@+id/nombre_txt"
        android:layout_alignBottom="@+id/nombre_txt"
        android:layout_toRightOf="@+id/nombre_txt"
        android:layout_toEndOf="@+id/nombre_txt" />


</RelativeLayout>