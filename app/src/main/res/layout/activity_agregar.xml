<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A continuaciÃ³n introduzca los datos"
        android:id="@+id/titulo_txt"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_gravity="center|top" />

    <GridLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout"
        android:layout_weight="0.39"
        android:orientation="horizontal"
        android:layout_gravity="center|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre :"
            android:id="@+id/nombre_txt"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center|right|top" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nombre_input"
            android:layout_row="0"
            android:layout_column="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="precio :"
            android:id="@+id/precio_txt"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|right|top" />

        <EditText
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:id="@+id/precio_input"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Existencias :"
            android:id="@+id/existencias_txt"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|top" />

        <EditText
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:id="@+id/existencias_input"
            android:layout_row="2"
            android:layout_column="1" />


    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/agregar_btn"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="agregar_clicked"
        android:layout_gravity="center" />

</LinearLayout>